<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BissafeServices" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="animationdialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="YellowTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>


    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_text_dark</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/grey_text_dark</item>
        <item name="colorControlHighlight">@color/grey_text_dark</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>


    <!--<style name="Theme.services.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->

    <style name="Theme.NewBookingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewBookingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#96989f</item>
        <!-- <item name="android:textSize">14sp</item>-->
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- <item name="tabTextAppearance">@style/MyCustomTabText</item>-->
        <item name="tabSelectedTextColor">#2E7D32</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabLayoutStyleNew">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


</resources>