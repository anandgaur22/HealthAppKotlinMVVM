<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appzdigital.healthgro">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.appzdigital.healthgro.application.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BissafeServices"
        android:usesCleartextTraffic="true">
        <activity android:name="com.appzdigital.healthgro.ui.searchLocation.SearchLocationActivity"></activity>
        <activity android:name="com.appzdigital.healthgro.ui.resetpassword.ResetSuccessfulActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.verifyOtp.VerifyOtpActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.resetpassword.ResetPasswordActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.forgotpassword.ForgotPasswordActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.home.HomeActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.signup.SignupActivity" />
        <activity android:name="com.appzdigital.healthgro.ui.login.LoginActivity" />
        <activity
            android:name="com.appzdigital.healthgro.ui.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>